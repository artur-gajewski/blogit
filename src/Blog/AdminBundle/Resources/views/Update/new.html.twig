{% extends "::layout.html.twig" %}

{% block section %}
    <li>{{ "common.admin" | trans }}</li>
    <li>{{ "updates.new.new_update" | trans }}</li>
{% endblock %}

{% block page_content %}
    <h2>{{ "updates.new.new_update" | trans }}</h2>
    <div class="form-container">
        <form action="{{ path("new_update") }}" method="post" class="bs-example form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label for="content" class="col-lg-2 control-label">{{ "new.content" | trans }}</label>
                    <div class="col-lg-10">
                        <textarea id="content" name="content" class="ckeditor"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" id="submit" name="submit" class="btn btn-primary">{{ "updates.new.create_button" | trans }}</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/blogmain//ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('bundles/blogmain//ckeditor/adapters/jquery.js') }}"></script>

{% endblock %}
