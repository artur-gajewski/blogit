{% extends "::layout.html.twig" %}

{% block section %}
    <li>{{ "common.admin" | trans }}</li>
    <li>{{ "updates.list_updates" | trans }}</li>
{% endblock %}

{% block page_content %}
<div class="row">
    <div class="col-sm-12">
        <h2>{{ "updates.updates" | trans }}</h2>
        <div class="bs-example table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th width="50%">{{ "updates.content" | trans }}</th>
                    <th>{{ "updates.options" | trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for update in updates %}
                <tr>
                    <td>{{ update.content | raw }}</td>
                    <td>
                        <a href="{{ url('edit_update', { 'updateId': update.id }) }}"class="btn btn-info btn-sm">{{ "updates.edit_button" | trans }}</a>
                        <a href="{{ url('delete_update', { 'updateId': update.id }) }}"class="btn btn-danger btn-sm">{{ "updates.delete_button" | trans }}</a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ url('new_update') }}"class="btn btn-primary btn-sm">{{ "updates.create_button" | trans }}</a>
        </div>
    </div>
</div>
{% endblock %}