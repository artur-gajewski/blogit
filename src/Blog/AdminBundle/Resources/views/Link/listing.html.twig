{% extends "::layout.html.twig" %}

{% block section %}
    <li>{{ "common.admin" | trans }}</li>
    <li>{{ "links.list_links" | trans }}</li>
{% endblock %}

{% block page_content %}
<div class="row">
    <div class="col-sm-12">
        <h2>{{ "links.links" | trans }}</h2>
        <div class="bs-example table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>{{ "links.title" | trans }}</th>
                    <th>{{ "links.url" | trans }}</th>
                    <th>{{ "links.options" | trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for link in links %}
                <tr>
                    <td>{{ link.title | capitalize }}</td>
                    <td>{{ link.url }}</td>
                    <td>
                        <a href="{{ url('edit_link', { 'linkId': link.id }) }}"class="btn btn-info btn-sm">{{ "links.edit_button" | trans }}</a>
                        <a href="{{ url('delete_link', { 'linkId': link.id }) }}"class="btn btn-danger btn-sm">{{ "links.delete_button" | trans }}</a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ url('new_link') }}"class="btn btn-primary btn-sm">{{ "links.create_button" | trans }}</a>
        </div>
    </div>
</div>
{% endblock %}