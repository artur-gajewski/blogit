{% extends "::layout.html.twig" %}

{% block section %}
    <li>Administration</li>
    <li>Delete category</li>
{% endblock %}

{% block page_content %}
    <h2>Delete category</h2>
    <div class="form-container">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title">Warning!</h3>
            </div>
            <div class="panel-body">
                {% if category.getCountPosts() == 0 %}
                    You are about to delete this category. Once you delete it, you cannot undo the operation.
                {% else %}
                    This category has posts attached to it, it cannot be deleted!
                {% endif %}
            </div>
        </div>

        <div class="row post">
            <div class="col-lg-12">
                <div>
                    <h3>Title: {{ category.title | capitalize }}</h3>
                </div>
            </div>
        </div>

        {% if category.getCountPosts() > 0 %}
        <h2>Posts in this category</h2>
        <div class="bs-example table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Options</th>
                </tr>
                </thead>
                <tbody>
                {% for post in category.posts %}
                    <tr>
                        <td>{{ post.title | capitalize }}</td>
                        <td>
                            <a href="{{ url('edit_post', { 'postId': post.id }) }}"class="btn btn-info btn-sm">Edit</a>
                            <a href="{{ url('delete_post', { 'postId': post.id }) }}"class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}

        <form action="{{ url('delete_category', { 'categoryId': category.id }) }}" method="post" class="bs-example form-horizontal">
            <fieldset>
                <div class="form-group">
                    <div class="col-lg-12">
                        {% if category.getCountPosts() == 0 %}
                        <button type="submit" id="submit" name="submit" class="btn btn-danger">Delete this category</button>
                        {% endif %}
                        <a href="{{ url('list_categories') }}" class="btn btn-info">Back to category list</a>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endblock %}
