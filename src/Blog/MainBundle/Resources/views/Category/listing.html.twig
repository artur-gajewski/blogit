{% extends "::layout.html.twig" %}

{% block section %}
    <li>Administration</li>
    <li>List categories</li>
{% endblock %}

{% block page_content %}
<div class="row">
    <div class="col-sm-12">
        <h2>Categories</h2>
        <div class="bs-example table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>Category</th>
                    <th>Slug</th>
                    <th>Options</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                <tr>
                    <td>{{ category.title | capitalize }}</td>
                    <td>{{ category.slug }}</td>
                    <td>
                        <a href="{{ url('edit_category', { 'categoryId': category.id }) }}"class="btn btn-info btn-sm">Edit</a>
                        <a href="{{ url('delete_category', { 'categoryId': category.id }) }}"class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ url('new_category') }}"class="btn btn-primary btn-sm">Create new category</a>
        </div>
    </div>
</div>
{% endblock %}