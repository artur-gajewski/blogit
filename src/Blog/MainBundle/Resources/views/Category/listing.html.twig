{% extends "::layout.html.twig" %}

{% block section %}
    <li>{{ "common.admin" | trans }}</li>
    <li>{{ "categories.list_categories" | trans }}</li>
{% endblock %}

{% block page_content %}
<div class="row">
    <div class="col-sm-12">
        <h2>{{ "categories.categories" | trans }}</h2>
        <div class="bs-example table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>{{ "categories.category" | trans }}</th>
                    <th>{{ "categories.slug" | trans }}</th>
                    <th>{{ "categories.options" | trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                <tr>
                    <td>{{ category.title | capitalize }}</td>
                    <td>{{ category.slug }}</td>
                    <td>
                        <a href="{{ url('edit_category', { 'categoryId': category.id }) }}"class="btn btn-info btn-sm">{{ "categories.edit_button" | trans }}</a>
                        <a href="{{ url('delete_category', { 'categoryId': category.id }) }}"class="btn btn-danger btn-sm">{{ "categories.delete_button" | trans }}</a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ url('new_category') }}"class="btn btn-primary btn-sm">{{ "categories.create_button" | trans }}</a>
        </div>
    </div>
</div>
{% endblock %}