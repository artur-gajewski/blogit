{% extends "::layout.html.twig" %}

{% block section %}
    <li>Administration</li>
    <li>Unpublished posts</li>
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-sm-12">
            <h2>Unpublished posts</h2>
            <div class="bs-example table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Title</th>
                        <th>Slug</th>
                        <th>Created</th>
                        <th>Options</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in pagination %}
                        <tr>
                            <td>{{ post.title }}</td>
                            <td>{{ post.slug }}</td>
                            <td>{{ post.created | date('M d, Y') }}</td>
                            <td>
                                <a href="{{ url('edit_post', { 'postId': post.id }) }}"class="btn btn-info btn-sm">Edit</a>
                                <a href="{{ url('delete_post', { 'postId': post.id }) }}"class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}