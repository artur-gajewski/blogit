{% extends "::layout.html.twig" %}

{% block section %}
    <li>Administration</li>
    <li>Unpublished posts</li>
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-sm-12">
            <h2>Unpublished posts</h2>
            <div class="bs-example table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Title and Date</th>
                        <th>Options</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in pagination %}
                        <tr>
                            <td>{{ post.title }}<br/>{{ post.created | date('M d, Y') }}</td>
                            <td class="admin-options">
                                <a href="{{ url('edit_post', { 'postId': post.id }) }}"class="btn btn-info btn-sm">Edit</a>
                                <a href="{{ url('view_post', { 'postId': post.id, 'slug': post.slug }) }}"class="btn btn-primary btn-sm">View</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}