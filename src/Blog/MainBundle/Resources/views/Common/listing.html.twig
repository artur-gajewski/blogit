{% extends "::layout.html.twig" %}

{% block page_content %}
    {% for post in pagination %}
        <div class="row post">
            <div class="col-lg-12">
                <div>
                    <h3><a href="{{ url('view_post', { 'postId': post.id }) }}">{{ post.title }}</a></h3>
                </div>
                <div>
                    <h6>
                        {{ post.created | date('M d, Y') }}
                        {% if show_category == true %}
                        in <a href="{{ url('homepage') }}category/{{ post.category.slug }}">{{ post.category.title | capitalize }}</a>
                        {% endif %}
                    </h6>
                    {% if app.user and is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <a href="{{ url('edit_post', { 'postId': post.id }) }}" class="btn btn-primary btn-xs">Edit post</a>
                        <a href="{{ url('delete_post', { 'postId': post.id }) }}" class="btn btn-danger btn-xs">Delete post</a>
                    {% endif %}
                </div>
                <div class="content">
                    {{ post.content | raw }}
                </div>
            </div>
        </div>
    {% else %}
    <div class="row">
        <div class="col-lg-12">
            <div>
                <h3>No posts found!</h3>
            </div>
        </div>
    </div>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(pagination, 'BlogMainBundle:Common:pagination.html.twig') }}
    </div>
{% endblock %}
