{% extends "::layout.html.twig" %}

{% block page_content %}
    <div class="form-container">

        <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title">Warning!</h3>
            </div>
            <div class="panel-body">
                You are about to delete this post. Once you delete it, you cannot undo the operation.
            </div>
        </div>

        <div class="row article">
            <div class="col-lg-12">
                <div>
                    <h3>{{ article.title }}</h3>
                </div>
                <div>
                    <h4>
                        <span class="label label-default">
                            {{ article.created | date('M d, Y') }}
                        </span>
                    </h4>
                </div>
                <div class="content">
                    {{ article.content | raw }}
                </div>
            </div>
        </div>
        <form action="{{ url('delete_post', { 'postId': article.id }) }}" method="post" class="bs-example form-horizontal">
            <fieldset>
                <div class="form-group">
                    <div class="col-lg-12">
                        <button type="submit" id="submit" name="submit" class="btn btn-danger">Delete this post</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endblock %}
