{% extends "::layout.html.twig" %}

{% block page_content %}
    <div class="row article">
        <div class="col-lg-12">
            <div>
                <h3>{{ article.title }}</h3>
            </div>
            <div>
                <h4>
                    <span class="label label-default">
                        {{ article.created | date('M d, Y') }}
                    </span>
                </h4>
            </div>
            <div class="content">
                {{ article.content | raw }}
            </div>
        </div>
    </div>
{% endblock %}
