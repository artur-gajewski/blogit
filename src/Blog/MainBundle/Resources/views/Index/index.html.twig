{% extends "::layout.html.twig" %}

{% block page_content %}
    {% for article in pagination %}
        <div class="row article">
            <div class="col-lg-12">
                <div>
                    <h3><a href="{{ url('view_post', { 'postId': article.id }) }}">{{ article.title }}</a></h3>
                </div>
                <div>
                    <h4>
                        <span class="label label-default">
                            {{ article.created | date('M d, Y') }}
                        </span>
                    </h4>
                    {% if app.user and is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <a href="{{ url('edit_post', { 'postId': article.id }) }}" class="btn btn-primary btn-xs">Edit post</a>
                        <a href="{{ url('delete_post', { 'postId': article.id }) }}" class="btn btn-danger btn-xs">Delete post</a>
                    {% endif %}
                </div>
                <div class="content">
                    {{ article.content | raw }}
                </div>
            </div>
        </div>
    {% else %}
    <div class="row">
        <div class="col-lg-12">
            <div>
                <h3>No posts found!</h3>
            </div>
        </div>
    </div>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(pagination, 'BlogMainBundle:Common:pagination.html.twig') }}
    </div>
{% endblock %}
